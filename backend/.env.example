# Environment
NODE_ENV=development
PORT=5000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/vespaverse_db"

# JWT Secrets
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_secure
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here_also_very_long_and_secure
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM_NAME=VespaVerse
SMTP_FROM_EMAIL=noreply@vespaverse.com

# Admin Configuration
ADMIN_EMAIL=admin@vespaverse.com
SALES_EMAIL=sales@vespaverse.com

# API Keys for external integrations
API_KEYS=vv_api_key_1,vv_api_key_2

# Logging
LOG_LEVEL=info
LOG_QUERIES=false
LOG_AUTH=false

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,pdf,doc,docx

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# External Services
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_STRICT_MAX=5

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_here
CORS_ORIGINS=http://localhost:3000,https://vespaverse.com,https://www.vespaverse.com

# Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_NEWSLETTER=true
ENABLE_ANALYTICS=true
ENABLE_FILE_UPLOAD=true

# Development
SEED_DATABASE=false
DEBUG_MODE=false